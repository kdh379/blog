{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@blog/*": ["../../apps/blog/src/*"],
      "contentlayer/generated": ["../../apps/blog/.contentlayer/generated"],
      "@ui/*": ["../../packages/ui/src/*"]
    }
  }
}
