{
  "name": "bandal.dev",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rmdir /s /q node_modules"
  },
  "lint-staged": {
    "(apps|packages)/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "overrides": {
    "next-contentlayer": {
      "next": "$next"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@opentelemetry/*",
        "next-contentlayer"
      ],
      "allowAny": [
        "@opentelemetry/*",
        "next-contentlayer"
      ]
    }
  }
}
